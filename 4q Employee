package package1;

public class Employee {
    private String ssn;
    String department;          
    protected double salary;     
    public String name;          

    public Employee(String name, double salary, String dept, String ssn) {
        this.name = name;
        this.salary = salary;
        this.department = dept;
        this.ssn = ssn;
    }

    public String getSSN() {
        return ssn;
    }
}
package package2;

import package1.Employee;
import java.util.Scanner;

public class Manager extends Employee {

    public Manager(String name, double salary, String dept, String ssn) {
        super(name, salary, dept, ssn);
    }

    public void showDetails() {
        System.out.println("\n=== Employee Details ===");
        System.out.println("Name: " + name);         
        System.out.println("Salary: " + salary);     
        System.out.println("Department: " + department); 
        System.out.println("SSN: " + getSSN());      
    }

    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        System.out.print("Enter employee name: ");
        String name = sc.nextLine();

        System.out.print("Enter salary: ");
        double salary = sc.nextDouble();
        sc.nextLine();  

        System.out.print("Enter department: ");
        String dept = sc.nextLine();

        System.out.print("Enter SSN: ");
        String ssn = sc.nextLine();

        Manager m = new Manager(name, salary, dept, ssn);
        m.showDetails();

        sc.close();
    }
}
